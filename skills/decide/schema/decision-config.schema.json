{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://claude.ai/schemas/decision-config.json",
  "title": "Decision Configurator Config",
  "description": "Schema for interactive decision configurator generated by /decide skill",
  "type": "object",
  "required": ["meta", "steps"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "type"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Configurator title",
          "minLength": 1
        },
        "subtitle": {
          "type": "string",
          "description": "Subtitle or description"
        },
        "type": {
          "type": "string",
          "enum": ["purchase", "technical", "implementation", "configuration"],
          "description": "Decision type - controls theme color"
        },
        "researchDir": {
          "type": "string",
          "description": "Path to research directory (e.g., .claude/research/DeepResearch_*)"
        },
        "planContext": {
          "type": "object",
          "properties": {
            "masterPlan": {
              "type": "string",
              "description": "Path to MASTER_PLAN.md"
            },
            "phase": {
              "type": "string",
              "description": "Phase name from plan"
            },
            "requirements": {
              "type": "array",
              "items": { "type": "string" },
              "description": "REQ-IDs this decision impacts"
            }
          }
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "options"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique step identifier (used in state and references)",
            "pattern": "^[a-z0-9-]+$"
          },
          "title": {
            "type": "string",
            "description": "Step title",
            "minLength": 1
          },
          "subtitle": {
            "type": "string",
            "description": "Step subtitle"
          },
          "decId": {
            "type": "string",
            "description": "DEC-ID from MASTER_PLAN.md",
            "pattern": "^DEC-[A-Z]+-[0-9]{3}$"
          },
          "filterBy": {
            "type": "object",
            "required": ["dataField", "matchStep"],
            "properties": {
              "dataField": {
                "type": "string",
                "description": "Field in option.data to match against"
              },
              "matchStep": {
                "type": "string",
                "description": "Step ID whose selected option.id determines filter value"
              }
            },
            "description": "Filter options based on data field matching selected option from another step"
          },
          "infoBox": {
            "type": "object",
            "required": ["html"],
            "properties": {
              "html": {
                "type": "string",
                "description": "HTML content for info box"
              },
              "variant": {
                "type": "string",
                "enum": ["default", "critical", "warning"],
                "default": "default",
                "description": "Info box style variant"
              }
            }
          },
          "options": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "title"],
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Unique option identifier within step",
                  "pattern": "^[a-z0-9-]+$"
                },
                "title": {
                  "type": "string",
                  "description": "Option title",
                  "minLength": 1
                },
                "badge": {
                  "type": "object",
                  "required": ["text"],
                  "properties": {
                    "text": {
                      "type": "string",
                      "description": "Badge text"
                    },
                    "color": {
                      "type": "string",
                      "enum": ["green", "amber", "purple", "blue", "red"],
                      "description": "Badge color variant"
                    }
                  }
                },
                "recommended": {
                  "type": "boolean",
                  "default": false,
                  "description": "Show RECOMMENDED ribbon on card"
                },
                "eliminated": {
                  "type": "boolean",
                  "default": false,
                  "description": "Gray out and disable option (filtered out by constraints)"
                },
                "price": {
                  "type": "object",
                  "required": ["amount"],
                  "properties": {
                    "amount": {
                      "type": "number",
                      "description": "Price in dollars (or relevant currency)"
                    },
                    "label": {
                      "type": "string",
                      "description": "Price label (e.g., 'per monitor', 'one-time')"
                    }
                  }
                },
                "effort": {
                  "type": "object",
                  "required": ["amount"],
                  "properties": {
                    "amount": {
                      "type": "string",
                      "description": "Effort estimate as string (e.g., '2 days', '1 week', '3-5 days')"
                    },
                    "label": {
                      "type": "string",
                      "description": "Effort label (e.g., 'implementation', 'setup')"
                    }
                  }
                },
                "specs": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["text"],
                    "properties": {
                      "text": {
                        "type": "string",
                        "description": "Spec text (bullet point)"
                      },
                      "type": {
                        "type": "string",
                        "enum": ["highlight", "warning", "neutral"],
                        "default": "neutral",
                        "description": "Spec type - controls icon and color"
                      }
                    }
                  },
                  "description": "List of specs/features (pros/cons)"
                },
                "tags": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["text", "ok"],
                    "properties": {
                      "text": {
                        "type": "string",
                        "description": "Tag text"
                      },
                      "ok": {
                        "type": "boolean",
                        "description": "true = green check, false = amber x"
                      }
                    }
                  },
                  "description": "Tags with ok/not-ok states (e.g., Mac compatibility)"
                },
                "links": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["label", "url"],
                    "properties": {
                      "label": {
                        "type": "string",
                        "description": "Link label (e.g., 'Amazon', 'RFC 7636')"
                      },
                      "url": {
                        "type": "string",
                        "format": "uri",
                        "description": "Link URL"
                      },
                      "detail": {
                        "type": "string",
                        "description": "Additional detail text (e.g., 'Ships to 20002')"
                      }
                    }
                  },
                  "description": "Resource links (buy links, documentation, etc.)"
                },
                "data": {
                  "type": "object",
                  "description": "Arbitrary data for filtering logic (e.g., {tier: '5k'})"
                },
                "visibleWhen": {
                  "type": "object",
                  "required": ["step", "equals"],
                  "properties": {
                    "step": {
                      "type": "string",
                      "description": "Step ID to check"
                    },
                    "equals": {
                      "type": "string",
                      "description": "Option ID that must be selected"
                    }
                  },
                  "description": "Show option only when specific step has specific selection"
                }
              }
            }
          }
        }
      }
    },
    "impactBar": {
      "type": "object",
      "required": ["items"],
      "properties": {
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["label"],
            "properties": {
              "label": {
                "type": "string",
                "description": "Item label in impact bar"
              },
              "fromStep": {
                "type": "string",
                "description": "Step ID - use selected option's price.amount"
              },
              "effortFromStep": {
                "type": "string",
                "description": "Step ID - use selected option's effort.amount (string)"
              },
              "multiplyByStep": {
                "type": "string",
                "description": "Step ID - multiply amount by this step's option.value or option.data.value"
              },
              "perUnit": {
                "type": "number",
                "description": "Fixed amount per unit (e.g., $30 per cable)"
              },
              "approximate": {
                "type": "boolean",
                "default": false,
                "description": "Prefix with ~ in display"
              }
            }
          },
          "description": "Impact bar items - each can pull from step or use fixed value"
        },
        "totalLabel": {
          "type": "string",
          "default": "Total",
          "description": "Label for total line"
        },
        "prefix": {
          "type": "string",
          "default": "$",
          "description": "Prefix for amounts ($ for price, empty for effort)"
        }
      },
      "description": "Live impact bar at bottom showing cumulative cost/effort"
    },
    "summary": {
      "type": "object",
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Summary section title"
        },
        "gridItems": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["label", "template"],
            "properties": {
              "label": {
                "type": "string",
                "description": "Grid item label"
              },
              "template": {
                "type": "string",
                "description": "Template string with {stepId.field} placeholders (e.g., '{monitor.title}', '${total}')"
              },
              "highlight": {
                "type": "boolean",
                "default": false,
                "description": "Highlight this grid item (larger, accent color)"
              }
            }
          },
          "description": "Summary grid items"
        },
        "actions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["text"],
            "properties": {
              "text": {
                "type": "string",
                "description": "Action item text (markdown or plain)"
              },
              "critical": {
                "type": "boolean",
                "default": false,
                "description": "Mark as critical (bold/color)"
              },
              "condition": {
                "type": "string",
                "description": "Condition for showing action (e.g., 'quantity=3')"
              }
            }
          },
          "description": "Action items / next steps"
        },
        "footer": {
          "type": "object",
          "properties": {
            "html": {
              "type": "string",
              "description": "Footer HTML content"
            }
          }
        },
        "export": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean",
              "description": "Enable export decisions button"
            },
            "filename": {
              "type": "string",
              "default": "decisions.json",
              "description": "Default filename for export"
            },
            "includeDecIds": {
              "type": "boolean",
              "default": true,
              "description": "Include DEC-IDs in export (if steps have decId)"
            }
          }
        }
      },
      "description": "Summary section shown when all steps completed"
    },
    "research": {
      "type": "object",
      "properties": {
        "summary": {
          "type": "string",
          "description": "Executive summary from research"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["provider", "title"],
            "properties": {
              "provider": {
                "type": "string",
                "description": "Research provider (e.g., 'openai', 'perplexity', 'gemini')"
              },
              "title": {
                "type": "string",
                "description": "Report title"
              },
              "content": {
                "type": "string",
                "description": "Condensed report content"
              },
              "citations": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["url"],
                  "properties": {
                    "url": {
                      "type": "string",
                      "format": "uri"
                    },
                    "title": {
                      "type": "string"
                    }
                  }
                },
                "description": "Source citations from research"
              }
            }
          },
          "description": "Research sources (if generated from research directory)"
        }
      },
      "description": "Research context (optional, shown as collapsible panel)"
    }
  }
}

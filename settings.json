{
  "permissions": {
    "allow": [
      "Bash(cat *)",
      "Bash(curl *)",
      "Bash(curl:*)",
      "Bash(du *)",
      "Bash(echo *)",
      "Bash(find *)",
      "Bash(gh auth:*)",
      "Bash(gh repo view:*)",
      "Bash(git branch:*)",
      "Bash(git config:*)",
      "Bash(git diff *)",
      "Bash(git diff)",
      "Bash(git init:*)",
      "Bash(git log *)",
      "Bash(git log)",
      "Bash(git show *)",
      "Bash(git show)",
      "Bash(git status *)",
      "Bash(git status)",
      "Bash(grep *)",
      "Bash(grep:*)",
      "Bash(head *)",
      "Bash(less *)",
      "Bash(ls *)",
      "Bash(ls)",
      "Bash(lsof *)",
      "Bash(pwd)",
      "Bash(rg *)",
      "Bash(sleep *)",
      "Bash(sqlite3 *)",
      "Bash(tail *)",
      "Bash(whoami)",
      "Read(/Users/turla/*)",
      "Read(~/*)",
      "Read(./*)",
      "WebFetch",
      "WebSearch",
      "Bash(zellij:*)"
    ],
    "deny": [
      "Read(./.env*)",
      "Read(./secrets/**)",
      "Read(./**/credentials*)"
    ],
    "ask": [],
    "defaultMode": "plan",
    "tools": {
      "Bash": {
        "git *": "confirm",
        "rm *": "confirm"
      }
    }
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["context7"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/turla/.claude/hooks/gate.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/turla/.claude/hooks/track.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/turla/.claude/hooks/surface.sh",
            "timeout": 180
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); printf '\\033[2m%s\\033[0m \\033[1;36m%s\\033[0m \\033[2m│\\033[0m \\033[33m%s\\033[0m \\033[2m│\\033[0m \\033[32m%s\\033[0m' \"$(echo \"$input\" | jq -r '.model.display_name')\" \"$(basename \"$(echo \"$input\" | jq -r '.workspace.current_dir')\")\" \"$(date '+%H:%M:%S')\" \"$(echo \"$input\" | jq -r '.version')\""
  },
  "enabledPlugins": {
    "canvas@claude-canvas": true
  },
  "installation": {
    "method": "npm-global"
  }
}
